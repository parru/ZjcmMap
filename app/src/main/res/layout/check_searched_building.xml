<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEB"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_poidetail"
        android:gravity="center_vertical"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/go_back_button"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/nav_option_return" />

        <TextView
            android:id="@+id/search_title_text"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-10dp"
            android:gravity="center"
            android:text="查询结果"
            android:textColor="#1A1A6E"
            android:textSize="18sp" />
        
        <Button android:id="@+id/goto_map_button"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="地图"
            />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/building_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:scrollbars="vertical" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/last_page_button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="上一页"
            android:visibility="visible" />

        <TextView
            android:id="@+id/page_num_text"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="1，共6页" >
        </TextView>

        <Button
            android:id="@+id/next_page_button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="下一页" />
    </LinearLayout>

</LinearLayout>