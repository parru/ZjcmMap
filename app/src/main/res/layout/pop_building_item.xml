<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fri_box"
    android:orientation="horizontal" >
    <ImageView android:id="@+id/building_pop_mark"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:src="@drawable/search"
        android:layout_marginTop="3dp"
        />
    <TextView android:id="@+id/building_pop_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:text="TTTTTTTTTT"
        >
    </TextView>
    <ImageView android:id="@+id/building_pop_path"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/pathfind"
        android:layout_marginTop="3dp"
        />

</LinearLayout>